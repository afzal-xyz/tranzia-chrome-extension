{
    "manifest_version": 3,
    "name": "Tranzia - Route Safety Scores",
    "version": "1.0.1",
    "description": "See safety scores for your Google Maps routes. Know how safe your route is before you go.",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://www.google.com/maps/*",
        "https://maps.google.com/*",
        "https://tranzia.com/*",
        "https://api.tranzia.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/maps/*",
                "https://maps.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "https://www.google.com/*",
                "https://maps.google.com/*"
            ]
        }
    ]
}